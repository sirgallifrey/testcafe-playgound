extends layout

block content
    br
    br
    br
    br
    br
    .row
        .col-sm-6.offset-md-3
            .card
                .card-block
                    h1.card-title Welcome!
                    p.card-text Please, sign up or sign in to use our app :)
                    if message
                        .alert.alert-danger(role="alert")= message
                    form(method="post")
                        div
                        div(class=("form-group" + ((errors && errors.username) ? ' has-danger' : ''))  )
                            label.form-control-label(for="username") Email address
                            input(type="text" class="form-control" id="username" name="username" placeholder="Enter email")
                            if errors && errors.username
                                .form-control-feedback= errors.username.message
                        div(class=("form-group" + ((errors && errors.password) ? ' has-danger' : ''))  )
                            label.form-control-label(for="password") Password
                            input(type="password" class="form-control" id="password" name="password" )
                            if errors && errors.password
                                .form-control-feedback= errors.password.message
                        div
                            button.btn.btn-primary(type="submit") Send